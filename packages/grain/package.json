{
  "name": "@hypur/grain",
  "version": "0.0.3",
  "private": false,
  "main": "./build/index.js",
  "module": "./build/index.js",
  "types": "./build/index.d.ts",
  "devDependencies": {
    "@types/bun": "latest"
  },
  "scripts": {
    "build": "bun run build:grain && bun run build:router && bun run build:declaration",
    "build:grain": "bun build ./src/index.ts --outdir ./build --minify && bun run build:declaration",
    "build:router": "bun build ./src/router.ts --outdir ./build --minify",
    "build:declaration": "tsc --emitDeclarationOnly --project tsconfig.types.json"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
