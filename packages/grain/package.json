{
  "name": "@hypur/grain",
  "version": "0.0.1",
  "private": false,
  "module": "index.ts",
  "type": "module",
  "devDependencies": {
    "@types/bun": "latest"
  },
  "main": "./build/grain",
  "scripts": {
    "build:grain": "bun build ./src/index.ts --outdir ./build/grain --minify && bun run build:declaration",
    "build:router": "bun build ./src/router.ts --outdir ./build/grain --minify",
    "build:declaration": "tsc --emitDeclarationOnly --project tsconfig.types.json",
    "release": "bun run build:grain && bun run build:router && bun run build:declaration && changeset publish"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
